{
    "name": "simple-stellar-signer",
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite --open --https",
        "dev:routify": "routify",
        "build": "routify -b && rollup -c",
        "preview": "vite preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "lint:check": "eslint --ext .js --ext .ts --ext .svelte . && prettier . && npm run check",
        "lint:fix": "eslint --fix --ext .js --ext .ts --ext .svelte . && prettier --config .prettierrc --write . && npm run check",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{svelte,js,ts}": "npm run lint:fix"
    },
    "devDependencies": {
        "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
        "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
        "@roxi/routify": "^2.18.4",
        "@sveltejs/vite-plugin-svelte": "^1.0.0-next.30",
        "@tsconfig/svelte": "^2.0.1",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "eslint": "^8.6.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-svelte3": "^3.3.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.1.7",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.5.1",
        "prettier-plugin-svelte": "^2.5.1",
        "svelte": "^3.44.0",
        "svelte-check": "^2.2.7",
        "svelte-preprocess": "^4.9.8",
        "tslib": "^2.3.1",
        "typescript": "^4.4.4",
        "vite": "^2.7.2"
    },
    "dependencies": {
        "@albedo-link/intent": "^0.11.2",
        "@stellar/freighter-api": "^1.1.2",
        "stellar-sdk": "^10.0.0"
    }
}
